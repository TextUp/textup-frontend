{{title "TextUp"}}

{{#liquid-if (get slideoutService.shouldShow (constant "SLIDEOUT.OUTLET.DEFAULT"))
	class='animate-slide-from-left animated-overflow'}}
	<div class="{{if lockContainer.isLocked 'hidden'}}">
		{{outlet (constant "SLIDEOUT.OUTLET.DEFAULT")}}
	</div>
{{/liquid-if}}

<div id="container">
	{{#lock-container doRegister=(action (mut lockContainer))
	  val= lockCode
	  doUpdateVal= (action (mut lockCode))
	  doValidate=(route-action 'verifyLockCode')
	  timeout= authService.authUser.org.content.timeout
	  username= authService.authUser.name
	}}
	  {{liquid-outlet}}
	{{/lock-container}}
</div>

{{notification-container notifications=notifications}}
{{loading-slider isLoading=loading}}
{{cookie-consent learnMoreLink=(config "links.privacyPolicy")}}
{{cordova-script}}
