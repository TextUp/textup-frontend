{{#if (type/is-text item)}}
    {{record-item/text text=item}}
{{else if (type/is-call item)}}
    {{record-item/call call=item}}
{{else if (type/is-note item)}}
    {{#if item.isReadOnly}}
        {{record-item/system-note note=item}}
    {{else}}
        {{record-item/note note=item
            onEdit=noteOptions.onEdit
            onRestore=noteOptions.onRestore
            onViewHistory=noteOptions.onViewHistory
            readOnly=noteOptions.readOnly}}
    {{/if}}
{{/if}}
