{{#if call.hasVoicemail}}
    {{audio-control source=call.voicemailUrl}}
{{else}}
    {{#if (gt call.receipts.successes.length 0)}}
        Call lasting {{moment-duration call.durationInSeconds 'seconds'}}
    {{else if (date/is-same-day call.whenCreated (now))}}
        Call in progress
    {{else}}
        Call could not be completed
    {{/if}}
{{/if}}
{{call.noteContents}}
{{#if call.media.content.displayedImages.isFulfilled}}
    {{image-stack images=call.media.content.displayedImages.content}}
{{/if}}

