<div class="contacts-display__contact_item__checkbox">
  <input type="checkbox"
    id="{{elementId}}__input"
    checked={{if _publicAPI.isSelect "checked" ""}}
    onchange={{action _onChange}}>
</div>
<div class = "contacts-display__contact_item__contact-data-container">
  <label for="{{elementId}}__input">
    <div class="contacts-display__contact_item__name text-ellipsis">
      {{data.name}}
    </div>
    <div class="contacts-display__contact_item__numbers">
      <span>
        {{phone-number (get data.numbers "0")}}
      </span>
      {{#if (gt data.numbers.length 1)}}
        <span class="contacts-display__contact_item__badge">
          + {{plus data.numbers.length -1}} {{pluralize "number" (plus data.numbers.length -1)}}
        </span>
      {{/if}}
    </div>
  </label>
</div>
