<div class="form-element">
    <label for="Tag Name">Tag Name</label>
    {{input class="start-focus form-control"
        disabled=tag.isDeleted
        value=tag.name
        type="text"
        placeholder="Tag Name"
        validateObj=tag
        validateField='name'
        validate='bottom'}}
</div>
<div class="form-element">
    <label for="Tag Color">Tag Color</label>
    {{color-control color=tag.hexColor
        disabled=tag.isDeleted}}
</div>
<div class="form-element row">
    <div class="xs-2-row-3 control-text">
        <label for="Language">
            Tag Language
        </label>
    </div>
    <select name="tag-language" class="xs-row-3 form-control"
        onchange={{action (mut tag.language) value="target.value"}}>
        {{#each constants.LANGUAGES as |_lang|}}
            <option value={{_lang}}
                selected={{if (eq _lang tag.language) "selected"}}>
                {{capitalize (lowercase _lang) 1}}
            </option>
        {{/each}}
    </select>
</div>
