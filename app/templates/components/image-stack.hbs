{{#responsive-image-gallery images=_images thumbnailClass=(concat elementId '-item') as |gallery|}}
    <div class="image-stack__preview {{itemClass}} {{concat elementId '-item'}}"
        onclick={{gallery.actions.open}}>
        {{responsive-image classNames="image-stack__preview__image"
            versions=_coverImage.versions.content
            onSuccess=(action _onSuccess)
            onFailure=(action _onFailure)}}
        {{yield _coverImage}}
    </div>
{{/responsive-image-gallery}}
