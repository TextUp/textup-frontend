{{#if showOverlay}}
    <svg class="overlay--svg {{svgClasses}}">
        <defs>
            <mask id={{_overlayId}} height="100%" width="100%" x="0" y="0">
                <rect fill="#FFFFFF" height="100%" width="100%" x="0" y="0"></rect>
                {{#if _elementDimensions}}
                    <rect fill="#000000"
                        x={{_elementDimensions.x}}
                        y={{_elementDimensions.y}}
                        width={{_elementDimensions.width}}
                        height={{_elementDimensions.height}}></rect>
                {{/if}}
            </mask>
        </defs>
        <rect height="100%" width="100%" x="0" y="0" mask="url(#{{_overlayId}})"></rect>
    </svg>
{{/if}}
