{{#hide-away classNames=containerClass
    triggerClass=triggerClass
    bodyClickClose=bodyClickClose
    animation=animation
    disabled=disabled
	startOpen=startOpen
	clickOutToClose=clickOutToClose
	animation=animation
	floating=floating
	floatHeightMax=floatHeightMax
	floatMode=floatMode
	horizontal=horizontal
	vertical=vertical
	role=role
	tabindex=tabindex as |dropdown position|}}
    <ul class="dropdown {{position.vertical}} {{position.horizontal}}">
        {{yield dropdown position}}
    </ul>
{{else}}
	{{yield to='inverse'}}
{{/hide-away}}
