{{#hide-away bodyClickClose=bodyClickClose
    floating=floating
    animation=animation
    disabled=disabled
	startOpen=startOpen
	clickOutToClose=clickOutToClose
	animation=animation
	floatMode=floatMode
	vertical=vertical
	throttleThreshold=throttleThreshold
	role=role
	tabindex=tabindex as |dropdown position|}}
    <ul class="dropdown {{position.vertical}} {{position.horizontal}}">
        {{yield dropdown position}}
    </ul>
{{else}}
	{{yield to='inverse'}}
{{/hide-away}}
