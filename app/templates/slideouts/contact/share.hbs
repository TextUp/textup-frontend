{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(service-prop "slideout/sharingService" "slideoutTitle"))
    footerComponent=(component "slideout-pane/actions"
        showFooter=(service-prop "slideout/sharingService" "anySharingChanges")
        onPrimary=(service-action "slideout/sharingService" "finishSlideout")
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(service-action "slideout/sharingService" "cancelSlideout") as |slideout|}}
    {{multi-toggle/share anyChanges=(get (service "slideout/sharingService") "anySharingChanges")
        contacts=(service-prop "slideout/sharingService" "contacts")
        staffs=(service-prop "sharingService" "staffCandidates")}}
{{/slideout-pane}}
