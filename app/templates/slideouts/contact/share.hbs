{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(if (gt sharingContacts.length 1)
            (concat "Share (" sharingContacts.length " selected)")
            (concat "Sharing " sharingContacts.firstObject.name)))
    footerComponent=(component "slideout-pane/actions"
        showFooter=contactAnySharingChange
        onPrimary=(route-action "finishContactSharingSlideout")
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(route-action "cancelContactSharingSlideout") as |slideout|}}
    {{multi-toggle/share anyChanges=(mut contactAnySharingChange)
        contacts=sharingContacts
        staffs=(service-prop "sharingService" "staffCandidates")}}
{{/slideout-pane}}
