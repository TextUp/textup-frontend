{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(phone-number (get model (constant "PROP_NAME.READABLE_IDENT"))))
    footerComponent=(component "slideout-pane/actions"
        showFooter=true
        onPrimary=(route-action "finishExistingContactSlideout")
        disablePrimary=(or (not model.allowEdits) (not (v-get model "isValid")))
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(route-action "cancelExistingContactSlideout")
    forceKeepOpen=model.isSaving
    focusSelector=".start-focus" as |slideout|}}
    {{form/contact-model contact=model
        onGoToDuplicates=(route-action "existingContactGoToDuplicateContact")
        onChangeNumbers=(action (mut model.numbers))
        onAddNumber=(service-action "contactService" "checkNumberDuplicate" model)
        onRemoveNumber=(service-action "contactService" "removeNumberDuplicate" model)}}
{{/slideout-pane}}

