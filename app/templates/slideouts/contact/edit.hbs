{{#slideout-pane
    headerProps=(hash title=(phone-number model.identifier))
    footerComponent=constants.SLIDEOUT.FOOTER.ACTIONS
    footerProps=(hash
        showFooter=true
        doPrimary=(route-action "finishExistingContactSlideout")
        disablePrimary=(or (not model.allowEdits) (not (v-get model "isValid")))
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=constants.SLIDEOUT.DIRECTION.RIGHT
    doClose=(route-action "cancelExistingContactSlideout")
    forceKeepOpen=model.isSaving
    focusSelector=".start-focus" as |slideout|}}
    {{form/contact-model contact=model
        onGoToDuplicates=(route-action "goToDuplicateContact")
        onAddNumber=(route-action "onAddNumber")
        onRemoveNumber=(route-action "onRemoveNumber")}}
{{/slideout-pane}}
