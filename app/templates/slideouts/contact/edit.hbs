{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(phone-number (service-prop "existingContactSlideoutService" "contactReadableIdent")))
    footerComponent=(component "slideout-pane/actions"
        showFooter=true
        onPrimary=(service-action "existingContactSlideoutService" "finishSlideout")
        disablePrimary=(service-prop "existingContactSlideoutService" "shouldDisablePrimaryAction")
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(service-action "existingContactSlideoutService" "cancelSlideout")
    forceKeepOpen=(service-prop "existingContactSlideoutService" "shouldForceKeepOpen")
    focusSelector=".start-focus" as |slideout|}}
    {{model-form/contact firstControlClass="start-focus"
        contact=(service-prop "existingContactSlideoutService" "contact")
        onGoToDuplicates=(service-action "existingContactSlideoutService" "goToDuplicate")
        onChangeNumbers=(service-mut "existingContactSlideoutService" "contact.numbers")
        onAddNumber=(service-action "contactService" "checkNumberDuplicate"
            (service-mut "existingContactSlideoutService" "contact"))
        onRemoveNumber=(service-action "contactService" "removeNumberDuplicate"
            (service-mut "existingContactSlideoutService" "contact"))}}
{{/slideout-pane}}

