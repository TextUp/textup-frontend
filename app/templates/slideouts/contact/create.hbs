{{#slideout-pane
    headerComponent=(component "slideout-pane/title" title="New Contact")
    footerComponent=(component "slideout-pane/actions"
        showFooter=true
        onPrimary=(service-action "slideout/newContactService" "finishSlideout")
        disablePrimary=(service-prop "slideout/newContactService" "newContact.validations.isInvalid")
        primaryLabel="Create"
        primaryProgressLabel="Creating...")
    onClose=(service-action "slideout/newContactService" "cancelSlideout")
    forceKeepOpen=(service-prop "slideout/newContactService" "newContact.isSaving")
    focusSelector=".start-focus" as |slideout|}}
    {{model-form/contact firstControlClass="start-focus"
        contact=(service-prop "slideout/newContactService" "newContact")
        onGoToDuplicates=(service-action "slideout/newContactService" "goToDuplicate")
        onChangeNumbers=(service-mut "slideout/newContactService" "newContact.numbers")
        onAddNumber=(service-action "contactService" "checkNumberDuplicate"
            (service-prop "slideout/newContactService" "newContact"))
        onRemoveNumber=(service-action "contactService" "removeNumberDuplicate"
            (service-prop "slideout/newContactService" "newContact"))}}
{{/slideout-pane}}
