{{#slideout-pane
    headerProps=(hash title='New Contact')
    footerComponent=(constant "SLIDEOUT.FOOTER.ACTIONS")
    footerProps=(hash
        showFooter=true
        doPrimary=(route-action "finishNewContactSlideout")
        disablePrimary=(not (v-get newContact "isValid"))
        primaryLabel="Create"
        primaryProgressLabel="Creating...")
    direction=(constant "SLIDEOUT.DIRECTION.LEFT")
    doClose=(route-action "cancelNewContactSlideout")
    forceKeepOpen=newContact.isSaving
    focusSelector=".start-focus" as |slideout|}}
    {{form/contact-model contact=newContact
        onGoToDuplicates=(route-action "goToDuplicateContact")
        onAddNumber=(route-action "onAddNumber")
        onRemoveNumber=(route-action "onRemoveNumber")}}
{{/slideout-pane}}
