{{#slideout-pane
    headerProps=(hash title='New Team')
    footerComponent="slideout-pane/actions"
    footerProps=(hash
        showFooter=true
        doPrimary=(route-action 'createTeam' newTeam
            (route-action 'closeAllSlideouts'))
        disablePrimary=(not (v-get newTeam 'isValid'))
        primaryLabel="Create"
        primaryProgressLabel="Creating...")
    onOpen=(route-action 'initializeNewTeam')
    doClose=(route-action 'revert' newTeam
        (route-action 'closeAllSlideouts'))
    forceKeepOpen=newTeam.isSaving
    focusSelector='.start-focus' as |slideout|}}
    <div class="pad-t">
        {{partial 'partials/team/create-edit'}}
    </div>
    {{form/location-form entity=newTeam onLocationError=(route-action 'mapError')}}
{{/slideout-pane}}
