{{#slideout-pane title=(if model.teams 'Team' 'New Team')
    direction='left'
    doClose=(route-action 'closeAllSlideouts')
    ignoreCloseSelectors='.header-slideout' as |slideout|}}
    {{#hide-away clickOutToClose=false
        animation='fade'
        ignoreTriggerSelectors='.result-list'
        startOpen=(if model.teams false true)
        tabindex=false
        hideTriggerOnOpen=true as |hideAway|}}
        <div class="pad-t">
            {{partial 'partials/team/create-edit'}}
        </div>
        <div class="horizontal-items text-center margin-t-double margin-b">
            {{#if model.teams}}
                <div class="clear-badge no-space">
                    <button class="btn" type='button'
                        onclick={{hideAway.actions.close}}>
                        Cancel
                    </button>
                </div>
            {{/if}}
            <div class="clear-badge no-space">
                <button class="btn btn-default" type='button'
                    onclick={{hideAway.actions.close}}>
                    Create
                </button>
            </div>
        </div>
    {{else}}
         <ul class="result-list">
            {{#each model.teams as |team|}}
                <li class="result-item">
                    <div class="row">
                        {{#link-to 'admin.team' team
                            tagName='div'
                            classNames='control-text'
                            tabindex='0'}}
                            <div class="horizontal-items pad-all clickable">
                                {{preview-badge color=team.hexColor
                                    onlyShowFull=true
                                    content=team.name}}
                                <span class="badge">
                                    {{team.numMembers}}
                                    <span class="fa fa-user"></span>
                                </span>
                            </div>
                        {{/link-to}}
                        <div class="pull-right">
                            <button class="btn btn-plain" type='button'>
                                <span class="fa fa-trash"></span>
                            </button>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
        <button class="btn btn-span" type='button'>
            <span class="fa fa-plus"></span>
        </button>
    {{/hide-away}}
{{/slideout-pane}}
