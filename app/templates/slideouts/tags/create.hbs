{{#slideout-pane title='New Tag'
    direction='left'
    onOpen=(route-action 'initializeNewTag')
    doClose=(route-action 'revert' newTag (route-action 'closeAllSlideouts'))
    ignoreCloseSelectors='.header-slideout'
    focusSelector='.start-focus' as |slideout|}}
    <div class="pad-t pad-l pad-r">
        {{partial 'partials/tag/create-edit'}}
    </div>
    <div class="horizontal-items text-center margin-t-double margin-b">
        <div class="clear-badge no-space">
            <button class="btn" type='button'
                onclick={{slideout.actions.close}}>
                Cancel
            </button>
        </div>
        <div class="clear-badge no-space">
            <button class="btn btn-default" type='button'
                disabled={{not (v-get newTag 'isValid')}}
                {{action 'createTag' newTag (route-action 'closeAllSlideouts')}}>
                Create
            </button>
        </div>
    </div>
{{/slideout-pane}}
