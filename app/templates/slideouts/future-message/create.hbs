{{#slideout-pane
    headerComponent=(component "slideout-pane/title" title="Schedule Message")
    footerComponent=(component "slideout-pane/actions"
        showFooter=true
        onPrimary=(service-action "slideout/newFutureMessageService" "finishSlideout")
        disablePrimary=(service-prop "slideout/newFutureMessageService" "shouldDisablePrimaryAction")
        primaryLabel="Schedule"
        primaryProgressLabel="Scheduling...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    focusSelector=".start-focus"
    forceKeepOpen=(service-prop "slideout/newFutureMessageService" "shouldForceKeepOpen")
    onClose=(service-action "slideout/newFutureMessageService" "cancelSlideout") as |slideout|}}
    {{#with (service-prop "slideout/newFutureMessageService" "futureMessage") as |futureMessage|}}
        {{model-form/future-message classNames="pad-t"
            firstControlClass="start-focus"
            futureMessage=futureMessage
            personalNumber=(service-prop "authService" "authUser.personalNumber")
            onAddImage=(service-action "mediaService" "addImage" futureMessage)
            onAddAudio=(service-action "mediaService" "addAudio" futureMessage)
            onRemoveMedia=(service-action "mediaService" "removeMedia" futureMessage)}}
    {{/with}}
{{/slideout-pane}}
