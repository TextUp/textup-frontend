{{#slideout-pane
    headerProps=(hash title="Schedule Message")
    footerComponent=constants.SLIDEOUT.FOOTER.ACTIONS
    footerProps=(hash
        showFooter=true
        doPrimary=(route-action "finishNewScheduleMessageSlideout")
        disablePrimary=(not (v-get newFutureMessage "isValid"))
        primaryLabel="Schedule"
        primaryProgressLabel="Scheduling...")
    direction=constants.SLIDEOUT.DIRECTION.RIGHT
    focusSelector=".start-focus"
    forceKeepOpen=newFutureMessage.isSaving
    doClose=(route-action "cancelNewScheduleMessageSlideout") as |slideout|}}
    {{form/future-message classNames="pad-t"
        futureMessage=newFutureMessage
        personalPhoneNumber=authService.authUser.personalPhoneNumber}}
{{/slideout-pane}}
