{{#slideout-pane
    headerProps=(hash title=(if selected
        (concat 'Share (' selected.length ' selected)')
        (concat 'Sharing ' contact.name)))
    footerComponent="slideout-pane/actions"
    footerProps=(hash
        showFooter=contactAnySharingChange
        doPrimary=(route-action 'persist' (if selected selected contact)
            (route-action 'clearList' (if selected selected contact) 'actions'
                (route-action 'closeAllSlideouts')))
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=constants.SLIDEOUT.DIRECTION.RIGHT
    doClose=(route-action 'clearList' (if selected selected contact) 'actions'
        (route-action 'closeAllSlideouts')) as |slideout|}}
    {{#if stateManager.shareCandidates.isFulfilled}}
        {{multi-toggle/share anyChanges=(mut contactAnySharingChange)
            contacts=(if selected selected contact)
            staffs=stateManager.shareCandidates.content}}
    {{/if}}
{{/slideout-pane}}
