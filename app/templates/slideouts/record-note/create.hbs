{{#slideout-pane
    headerProps=(hash title="New Note")
    footerComponent=constants.SLIDEOUT.FOOTER.ACTIONS
    footerProps=(hash
        showFooter=true
        doPrimary=(route-action "finishAddNoteSlideout")
        disablePrimary=(not (v-get newRecordNote "isValid"))
        primaryLabel="Create"
        primaryProgressLabel="Creating...")
    direction=constants.SLIDEOUT.DIRECTION.RIGHT
    doClose=(route-action "cancelAddNoteSlideout")
    forceKeepOpen=newRecordNote.isSaving
    focusSelector=".start-focus" as |slideout|}}
    {{form/record-note class="pad-t"
        recordNote=newRecordNote
        onAddImage=(route-action "onAddImage" newRecordNote)
        onAddAudio=(route-action "onAddAudio" newRecordNote)
        onRemoveMedia=(route-action "onRemoveMedia" newRecordNote)
        onAddLocation=(route-action "onNoteAddLocation" newRecordNote)
        onRemoveLocation=(route-action "onNoteRemoveLocation" newRecordNote)
        onLocationError=(route-action "onLocationError")
        contentsClass="start-focus"
        readOnly=(and (eq model.constructor.modelName constants.MODEL.CONTACT) (not model.allowEdits))}}
{{/slideout-pane}}
