{{#slideout-pane
    headerComponent=(component "slideout-pane/title" title="New Note")
    footerComponent=(component "slideout-pane/actions"
        showFooter=true
        onPrimary=(service-action "slideout/noteService" "finishSlideout")
        disablePrimary=(service-prop "slideout/noteService" "shouldDisablePrimaryAction")
        primaryLabel="Create")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(service-action "slideout/noteService" "cancelSlideout")
    forceKeepOpen=(service-prop "slideout/noteService" "shouldForceKeepOpen")
    focusSelector=".start-focus"}}
    {{#with (service-prop "slideout/noteService" "recordNote") as |recordNote|}}
        {{model-form/record-note class="pad-t"
            firstControlClass="start-focus"
            recordNote=recordNote
            onAddImage=(service-action "mediaService" "addImage" recordNote)
            onAddAudio=(service-action "mediaService" "addAudio" recordNote)
            onRemoveMedia=(service-action "mediaService" "removeMedia" recordNote)
            onAddLocation=(service-action "recordItemService" "addLocationToNote" recordNote)
            onRemoveLocation=(service-action "recordItemService" "removeLocationFromNote" recordNote)
            onLocationError=(service-action "mapService" "handleError")
            readOnly=(service-prop "slideout/noteService" "isReadOnly")}}
    {{/with}}
{{/slideout-pane}}
