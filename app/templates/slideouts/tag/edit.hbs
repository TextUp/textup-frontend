{{#with (service-prop "existingTagSlideoutService" "tag.isDeleted") as |isDeleted|}}
    {{#slideout-pane
        headerComponent=(component "slideout-pane/title"
            title=(concat "Edit " (service-prop "existingTagSlideoutService" "tag.name")))
        footerComponent=(component "slideout-pane/actions"
            showFooter=true
            onPrimary=(service-action "existingTagSlideoutService" "finishSlideout")
            disablePrimary=(service-prop "existingTagSlideoutService" "shouldDisablePrimaryAction")
            primaryLabel=(if isDeleted "Confirm Delete" "Update")
            primaryProgressLabel=(if isDeleted "Deleting..." "Updating")
            primaryClass=(if isDeleted "btn btn-danger")
            secondaryLabel=(if isDeleted "Undo" "Cancel")
            onSecondary=(if isDeleted (service-action "existingTagSlideoutService" "tryRollbackText"))
            showDelete=(not isDeleted)
            onMarkForDelete=(service-action "existingTagSlideoutService" "onTagMarkForDelete"))
        direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
        onClose=(service-action "existingTagSlideoutService" "cancelSlideout")
        forceKeepOpen=(service-prop "existingTagSlideoutService" "shouldForceKeepOpen")
        focusSelector=".start-focus" as |slideout|}}
        {{model-form/tag tag=(service-prop "existingTagSlideoutService" "tag")
            firstControlClass="start-focus"}}
    {{/slideout-pane}}
{{/with}}
