{{#with (service-prop "slideout/existingTagService" "tag.isDeleted") as |isDeleted|}}
    {{#slideout-pane
        headerComponent=(component "slideout-pane/title"
            title=(concat "Edit " (service-prop "slideout/existingTagService" "tag.name")))
        footerComponent=(component "slideout-pane/actions"
            showFooter=true
            onPrimary=(service-action "slideout/existingTagService" "finishSlideout")
            disablePrimary=(service-prop "slideout/existingTagService" "shouldDisablePrimaryAction")
            primaryLabel=(if isDeleted "Delete" "Update")
            primaryClass=(if isDeleted "btn btn-danger")
            secondaryLabel=(if isDeleted "Undo" "Cancel")
            onSecondary=(if isDeleted (service-action "slideout/existingTagService" "tryRollbackText"))
            showDelete=(not isDeleted)
            onMarkForDelete=(service-action "slideout/existingTagService" "onTagMarkForDelete"))
        direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
        onClose=(service-action "slideout/existingTagService" "cancelSlideout")
        forceKeepOpen=(service-prop "slideout/existingTagService" "shouldForceKeepOpen")
        focusSelector=".start-focus" as |slideout|}}
        {{model-form/tag tag=(service-prop "slideout/existingTagService" "tag")
            firstControlClass="start-focus"}}
    {{/slideout-pane}}
{{/with}}
