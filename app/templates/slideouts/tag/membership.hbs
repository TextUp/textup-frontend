{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(service-prop "slideout/tagMembershipService" "slideoutTitle"))
    footerComponent=(component "slideout-pane/actions"
        showFooter=(service-prop "slideout/tagMembershipService" "anyMembershipChanges")
        onPrimary=(service-action "slideout/tagMembershipService" "finishSlideout")
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=(constant "SLIDEOUT.DIRECTION.RIGHT")
    onClose=(service-action "slideout/tagMembershipService" "cancelSlideout") as |slideout|}}
    {{#multi-toggle/group-by-bucket
        anyChanges=(get (service "slideout/tagMembershipService") "anyMembershipChanges")
        itemBucketProperty=(constant "PROP_NAME.TAGS")
        items=(service-prop "slideout/tagMembershipService" "contacts")
        buckets=(service-prop "slideout/tagMembershipService" "tags") as |tag|}}
        {{color-badge color=tag.hexColor text=tag.name}}
    {{else}}
        <li class="no-results">No tags yet.</li>
    {{/multi-toggle/group-by-bucket}}
{{/slideout-pane}}
