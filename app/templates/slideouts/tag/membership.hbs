{{#slideout-pane
    headerProps=(hash title=(if (gt tagMembershipContacts.length 1)
        (concat 'Tags (' tagMembershipContacts.length ' selected)')
        (concat tagMembershipContacts.firstObject.name ' Tags')))
    footerComponent=constants.SLIDEOUT.FOOTER.ACTIONS
    footerProps=(hash
        showFooter=tagsHaveActions
        doPrimary=(route-action "finishTagMembershipSlideout")
        primaryLabel="Update"
        primaryProgressLabel="Updating...")
    direction=constants.SLIDEOUT.DIRECTION.RIGHT
    doClose=(route-action "cancelTagMembershipSlideout") as |slideout|}}
    {{#multi-toggle/group-by-bucket anyChanges=(mut tagsHaveActions)
        itemBucketProperty='tags'
        items=tagMembershipContacts
        buckets=tagMembershipTags as |tag|}}
            {{preview-badge color=tag.hexColor onlyShowFull=true content=tag.name}}
    {{else}}
        <li class="no-results">No tags yet.</li>
    {{/multi-toggle/group-by-bucket}}
{{/slideout-pane}}
