{{#slideout-pane
    headerComponent=(component "slideout-pane/title"
        title=(service-prop "slideout/newTagService" "slideoutTitle"))
    footerComponent=(component "slideout-pane/actions"
        showFooter=(service-prop "slideout/newTagService" "tagsListHideAway.isOpen")
        onPrimary=(service-action "slideout/newTagService" "finishCreateInTagList")
        disablePrimary=(service-prop "slideout/newTagService" "shouldDisablePrimaryAction")
        primaryLabel="Create"
        primaryProgressLabel="Creating..."
        onSecondary=(service-action "slideout/newTagService" "cancelCreateInTagList")
        hideSecondary=(service-prop "slideout/newTagService" "noExistingTags"))
    onClose=(service-action "slideout/newTagService" "cancelSlideout")
    forceKeepOpen=(service-prop "slideout/newTagService" "shouldForceKeepOpen") as |slideout|}}
    {{#hide-show doRegister=(service-mut "slideout/newTagService" "tagsListHideAway")
        startOpen=(service-prop "slideout/newTagService" "noExistingTags")
        focusOnOpenSelector=".start-focus"
        onOpen=(service-action "slideout/newTagService" "onOpenCreateInTagList") as |hideShow|}}
        {{#if hideShow.isOpen}}
            {{model-form/tag tag=(service-prop "slideout/newTagService" "newTag")
                firstControlClass="start-focus"}}
        {{else}}
            <ul class="result-list">
                {{#each (service-prop "slideout/newTagService" "existingTags") as |tag|}}
                    <li class="result-item">
                        <div class="row">
                            {{#link-to "main.tag"
                                    (get (service-prop "authService" "authUser") (constant "PROP_NAME.URL_IDENT"))
                                    (get tag (constant "PROP_NAME.URL_IDENT"))
                                tagName="div"
                                classNames="control-text"
                                tabindex="0"}}
                                <div class="horizontal-items clickable pad-all">
                                    {{color-badge color=tag.hexColor text=tag.name}}
                                    <span class="badge">
                                        {{tag.numMembers}}
                                        <span class="icon-person"></span>
                                    </span>
                                </div>
                            {{/link-to}}
                        </div>
                    </li>
                {{/each}}
            </ul>
            <div class="form">
                <div class="form__group">
                    <button class="button button--expand"
                        type="button"
                        onclick={{hideShow.actions.open}}>
                        <span class="icon-thin-plus" id="tour-createNewTagButton"></span>
                    </button>
                </div>
            </div>
        {{/if}}
    {{/hide-show}}
{{/slideout-pane}}
