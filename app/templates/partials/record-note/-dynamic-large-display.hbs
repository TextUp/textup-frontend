<div class="note-controls no-select">
    {{#if rNote.hasRevisions}}
        <button class="btn btn-plain btn-span" type='button'
            onclick={{route-action 'mutate' (action (mut recordNote)) rNote
                (route-action 'toggleDetailSlideout'
                    'slideouts/record-note/revisions'
                    (if contact 'main/contacts/contact' 'main/tag/details'))}}>
            <span class="fa fa-history"></span>
        </button>
    {{/if}}
    {{#if (not contact.isSharedView)}}
        <button class="btn btn-plain btn-span" type='button'
            onclick={{route-action 'mutate' (action (mut recordNote)) rNote
                (route-action 'mutate' (action (mut rNote.isEditingNote)) true
                    (route-action 'toggleDetailSlideout'
                    'slideouts/record-note/edit'
                    (if contact 'main/contacts/contact' 'main/tag/details')))}}>
            <span class="fa fa-pencil"></span>
        </button>
    {{/if}}
</div>
{{#if rNote.noteContents}}
    <div class="{{if (not rNote.hasNeitherLocationNorImages) 'm-5-row-10'}}">
        <div class="contents text-wrap yes-select-text
            {{if rNote.hasRevisions 'has-revisions'}}">
            {{rNote.noteContents}}
        </div>
    </div>
{{/if}}
<div class="{{if rNote.noteContents 'm-5-row-10'}}">
    {{partial 'partials/record-note/dynamic-media'}}
</div>
