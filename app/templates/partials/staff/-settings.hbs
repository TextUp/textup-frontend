<div class='form__group'>
    <label class="form__label" for='Your Name'>Your Name</label>
    {{input value=staff.name
        type='text'
        placeholder='Your Name'
        class='form__input'
        validateObj=staff
        validateField='name'
        validate='bottom'}}
</div>
<div class='form__group'>
    <label class="form__label" for='Email'>Email</label>
    {{input value=staff.email
        type='email'
        placeholder='Email'
        class='form__input'
        validateObj=staff
        validateField='email'
        validate='bottom'}}
</div>
{{#if (and staff.phone.isFulfilled staff.phone.content.number)}}
    <div class='form__group'>
        <label class="form__label" for='TextUp Phone'>TextUp Phone</label>
        {{phone-control number=staff.phone.content.number}}
    </div>
    <div class="form__group">
        <div class="xs-2-row-3 control-text">
            <label class="form__label" for="Default Language">
                Default Language
            </label>
        </div>
        <select name="scheduled-message-language" class="xs-row-3 form__input"
            onchange={{action (mut staff.phone.content.language) value="target.value"}}>
            {{#each constants.LANGUAGES as |_lang|}}
                <option value={{_lang}}
                    selected={{if (eq _lang staff.phone.content.language) "selected"}}>
                    {{capitalize (lowercase _lang) 1}}
                </option>
            {{/each}}
        </select>
    </div>
{{/if}}
