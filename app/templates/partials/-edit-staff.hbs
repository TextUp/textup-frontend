<form class='pad-b'>
    <div class='form-element'>
        <label for='Staff Name' class='control-label'>Staff Name</label>
        {{input value=staff.name type='text' placeholder='Staff Name' class='form-control' focus-out='updateStaff' enter='updateStaff'}}
    </div>
    <div class='form-element'>
        <label for='Staff Email' class='control-label'>Staff Email</label>
        {{input value=staff.email type='email' placeholder='Staff Email' class='form-control' focus-out='updateStaff' enter='updateStaff'}}
    </div>
    <div class='form-element'>
        <label for='Personal Phone' class='control-label'>Staff Personal Phone</label>
        {{#hide-away tabindex=false
            classNames='input-group-element'
            clickOutToClose=false
            animation='fade'
            onClose=(action 'clearNew')
            allowedTriggerSelectors='.edit-personal-phone'
            hideTriggerOnOpen=true as |hideAway|}}
            <div class="input-group">
                <span class="input-group-addon">
                    <button class='btn' type='button'
                        onclick={{hideAway.actions.close}}>
                        <span class="fa fa-times"></span>
                    </button>
                </span>
                {{#phone-number number=newPersonalNumber
                    controlClass='blend-in'
                    onChange=(action 'storeNewPersonalNumber')
                    onClick=(action 'updatePersonalNumber')
                    forceDefaultValidate=true
                    onValidate=(action 'validatePersonalNumber' hideAway.actions.close)}}
                {{else}}
                    <span class='fa fa-arrow-right'></span>
                {{/phone-number}}
            </div>
        {{else}}
            {{#phone-number number=personalNumber
                showControl=true
                controlClass='blend-in edit-personal-phone'}}
            {{else}}
                <span class='fa fa-pencil'></span>
            {{/phone-number}}
        {{/hide-away}}
    </div>
	{{#with staff as |owner|}}
        {{partial 'partials/update-delete-textup-number'}}
	{{/with}}
	<div class="pad-t text-center">
        <button class="btn" type='button'>
            Cancel
        </button>
        <button class="btn btn-default" type='button'>
            Update
        </button>
	</div>
</form>
<hr>
{{#hide-away tabindex=false
    classNames='form-element'
    bodyClass='pad-t pad-r pad-b pad-l'}}
    <form {{action 'updateUsernameAndLogout' on='submit'}}>
        <div class='form-element'>
            Changing username will require logging back in.
        </div>
        <div class='form-element'>
            <label for='Your Password' class='control-label'>Your Password</label>
            {{input type='password' class='form-control' placeholder='Your Password' value=newUPassword}}
        </div>
        <div class='form-element'>
            <label for='New Username' class='control-label'>New Username</label>
            <div class='input-group'>
                {{input type='text' class='form-control' placeholder='New Username' value=newUsername}}
                <span class='input-group-addon'>
                    <button class='btn btn-default' type='submit'>Update</button>
                </span>
            </div>
        </div>
    </form>
{{else}}
    <button class="btn btn-span" type='button'>
        Update username
        <span class="fa fa-caret-down"></span>
    </button>
{{/hide-away}}
{{#hide-away tabindex=false
    classNames='form-element'
    bodyClass='pad-t pad-r pad-b pad-l'}}
    <form {{action 'updatePasswordAndLogout' on='submit'}}>
        <div class='form-element'>
            Changing password will require logging back in.
        </div>
        <div class='form-element'>
            <label for='Your Password' class='control-label'>Your Password</label>
            {{input type='password' class='form-control' placeholder='Your Password' value=newPPassword}}
        </div>
        <div class='form-element'>
            <label for='New Password' class='control-label'>New Password</label>
            {{input type='password' class='form-control' placeholder='New Password' value=newPassword}}
        </div>
        <div class='form-element'>
            <label for='Confirm New' class='control-label'>Confirm New</label>
            <div class='input-group'>
                {{input type='password' class='form-control' placeholder='Confirm New Password' value=confirmNewPassword}}
                <span class='input-group-addon'>
                    <button class='btn btn-default' type='submit'>Update</button>
                </span>
            </div>
        </div>
    </form>
{{else}}
    <button class="btn btn-span" type='button'>
        Update password
        <span class="fa fa-caret-down"></span>
    </button>
{{/hide-away}}
